{
	"env": {
		"browser": true
	},
	"parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"rules": {
		"array-callback-return":		2,
		"block-scoped-var":				2,
		"curly":						2,
		"dot-location":					["error", "property"],
		"eqeqeq":						2,
		"for-direction": 			   	2,
		"getter-return": 			   	2,
		"guard-for-in":					1,
		"no-compare-neg-zero":   		2,
		"no-cond-assign": 		   		2,
		"no-constant-condition": 		1,
		"no-control-regex": 	   		1,
		"no-dupe-args": 			   	2,
		"no-dupe-keys":					2,
		"no-duplicate-case":		 	2,
		"no-global-assign":				2,
		"no-else-return":				1,
		"no-empty":						2,
		"no-empty-character-class": 	1,
		"no-empty-pattern":				2,
		"no-ex-assign":					2,
		"no-extra-boolean-cast":		2,
		"no-extra-semi":				2,
		"no-func-assign":				2,
		"no-inner-declarations":		2,
		"no-invalid-regexp":			2,
		"no-irregular-whitespace":		2,
		"no-obj-calls":					2,
		"no-redeclare":					2,
		"no-regex-spaces":				2,
		"no-self-assign":				2,
		"no-sparse-arrays":				2,
		"no-unexpected-multiline":		2,
		"no-unreachable":				2,
		"no-unsafe-finally":			2,
		"no-unsafe-negation":			2,
		"no-unused-vars":				1,
		"no-useless-escape":			2,
		"use-isnan":					2,
		"valid-typeof":					2	
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}